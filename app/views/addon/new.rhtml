<h1><%= t :"addon.header" %></h1>
<%= error_messages_for(:addon) %>

<% form_tag :action => :create do |f| %>
  <%= render :partial => 'form' %>
  <select name="addon[room_id]">
   <% @rooms.each do |room| %>
       <option value="<%= room.id %>">
         <%= room.name %>
       </option>
   <% end %>
  </select>
  <br>
  <br>
  <%= submit_tag t(:"global_create") %>
<% end %>